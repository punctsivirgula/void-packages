# Template file for 'nord-xfce-terminal'
pkgname=nord-xfce-terminal
version=0.1.0
revision=1
build_style=meta
short_desc="Nord color theme for Xfce Terminal"
maintainer="punct <punctsivirgula@protonmail.com>"
license="MIT"
homepage="https://github.com/arcticicestudio/nord-xfce-terminal"
distfiles="https://github.com/arcticicestudio/${pkgname}/archive/v${version}.tar.gz"
checksum=3fd8e2b675906a49eea8a2ec23cc3b01d0780a0ed150d00c7ab8c99072023e3c


do_install() {
	_installpath=${DESTDIR}/usr/share/xfce4/terminal/colorschemes/
	mkdir -p ${_installpath}
	cp src/nord.theme ${_installpath}
}

post_install() {
	vlicense LICENSE.md
}
